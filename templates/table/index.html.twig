{% extends 'base.html.twig' %}

{% block title %}Table index{% endblock %}

{% block body %}
    <h1>Table index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Capacity</th>
            <th>Number</th>
            <th>Status</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for table in tables %}
            <tr>
                <td>{{ table.id }}</td>
                <td>{{ table.capacity }}</td>
                <td>{{ table.number }}</td>
                <td>{{ table.status|status }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('app_table_show', {'id': table.id}) }}">show</a>
                    <a class="btn btn-secondary" href="{{ path('app_table_edit', {'id': table.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_table_new') }}">Create new</a>
{% endblock %}
